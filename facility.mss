#facility {
  [zoom =10]{
  marker-width:9;
  marker-fill:#1087bf;
  marker-line-color:#ede8e4;
  marker-allow-overlap:true;
	}
  [zoom >=10][zoom >=11]{
  marker-width:11;
  marker-fill:#1087bf;
  marker-line-color:#ede8e4;
  marker-allow-overlap:true;
	}
  [zoom >=12][zoom>=14]{
  marker-width:17;
  marker-fill:#1087bf;
  marker-line-color:#ede8e4;
  marker-allow-overlap:true;
	}
  [zoom =15]{
  marker-width:16;
  marker-fill:#1087bf;
  marker-line-color:#ede8e4;
  marker-allow-overlap:true;
	}
  [zoom >= 16][zoom>=17]{
  marker-width:20;
  marker-fill:#1087bf;
  marker-line-color:#ede8e4;
  marker-allow-overlap:true;
	}
  
  }
